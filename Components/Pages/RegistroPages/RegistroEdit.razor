@page "/Registro/edit/{IdEntrada:int}"
@inject RegistroServices registroServices
@inject NavigationManager navigation
@rendermode InteractiveServer

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header">
            <h2 class="card-title">Editar</h2>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <label class="form-label"><strong>Nombre Cliente</strong></label>
                <InputText class="form-control" @bind-Value="huacal.NombreCliente" />
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Precio</strong></label>
                <InputNumber class="form-control" @bind-Value="huacal.precio" />
            </div>
            <div class="mb-3">
                <label class="form-label"><strong>Cantidad</strong></label>
                <InputNumber class="form-control" @bind-Value="huacal.cantidad" />
            </div>
            <div class="card-footer text-center">
                <button type="submit" @onclick="GuardarRegistro" class="btn btn-primary bi bi-floppy"> Modificar</button>
                <button type="button" @onclick="Eliminar" class="btn btn-danger bi bi-trash"> Eliminar</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int IdEntrada { get; set; }

    public ControlHuacal huacal = new();

    protected override async Task OnInitializedAsync()
    {
        var resultado = await registroServices.Buscar(IdEntrada);
        if (resultado != null)
        {
            huacal = resultado;
        }
        else
        {
            navigation.NavigateTo("/Registro/Index");
        }
    }

    public async Task GuardarRegistro()
    {
        if (await registroServices.Modificar(huacal))
        {
            navigation.NavigateTo("/Registro/Index");
        }
    }

    public async Task Eliminar()
    {
        if (await registroServices.Eliminar(IdEntrada))
        {
            navigation.NavigateTo("/Registro/Index");
        }
    }
}
